name: JDYHQ-sync
on:
  schedule:
    - cron: '45 20 * * *'
  workflow_dispatch:
  watch:
    types: started
  repository_dispatch:
    types: sync-JDYHQ
jobs:
  repo-sync:
    env:
      PAT: ${{ secrets.PAT }} 
    runs-on: ubuntu-latest
    if: github.event.repository.owner.id == github.event.sender.id
    steps:
      - uses: actions/checkout@v2
        with:
          persist-credentials: false

      - name: sync YHQ
        uses: repo-sync/github-sync@v2
        if: env.PAT
        with:
          source_repo: "https://gitee.com/cxtwg2/jdYhq.git"
          source_branch: "main"
          destination_branch: "yhq"
          github_token: ${{ secrets.PAT }}
